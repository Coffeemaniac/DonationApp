<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.donationapp.donate_item_description">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Charity Registeration"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center" />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Charity Name"
        android:inputType="textMultiLine"
        android:layout_marginBottom="20dp"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Charity Address"
        android:inputType="textMultiLine"
        android:layout_marginBottom="20dp"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Charity Registeration Number"
        android:inputType="textMultiLine"
        android:layout_marginBottom="20dp"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Preferences"
        android:inputType="textMultiLine"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done!"
        android:layout_marginLeft="150dp"
        android:onClick="completionView"/>

</LinearLayout>